<%# Navbar component %>
<nav class="fixed top-0 left-0 right-0 bg-gray-800 border-b border-gray-700">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <%# Logo/Brand %>
      <div class="flex items-center">
        <%= link_to root_path, class: "flex items-center" do %>
          <span class="text-xl font-bold text-white">Saotharlann</span>
        <% end %>
      </div>

      <%# Navigation Links %>
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-4">
          <%= link_to "Home", root_path, class: "text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium" %>
          <%= link_to "About", "#", class: "text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium" %>
          <%= link_to "Contact", "#", class: "text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium" %>
        </div>
      </div>

      <%# Mobile menu button %>
      <div class="md:hidden">
        <button type="button" class="text-gray-300 hover:text-white focus:outline-none focus:text-white" aria-label="Toggle menu">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <%# Mobile menu %>
  <div class="hidden md:hidden">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
      <%= link_to "Home", root_path, class: "text-gray-300 hover:text-white block px-3 py-2 rounded-md text-base font-medium" %>
      <%= link_to "About", "#", class: "text-gray-300 hover:text-white block px-3 py-2 rounded-md text-base font-medium" %>
      <%= link_to "Contact", "#", class: "text-gray-300 hover:text-white block px-3 py-2 rounded-md text-base font-medium" %>
    </div>
  </div>
</nav> 