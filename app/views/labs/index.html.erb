<div class="max-w-7xl mx-auto py-8 px-4 bg-gray-900 text-gray-100 min-h-screen">
  <h1 class="text-3xl font-bold mb-6">Labs</h1>
  <%= link_to 'New Lab', new_lab_path, class: 'inline-block mb-4 px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition' %>
  <div class="overflow-x-auto rounded shadow bg-gray-800">
    <table class="min-w-full bg-gray-800 border border-gray-700">
      <thead class="bg-gray-700">
        <tr>
          <th class="px-4 py-2 text-left font-semibold">Title</th>
          <th class="px-4 py-2 text-left font-semibold">Description</th>
          <th class="px-4 py-2 text-left font-semibold">Status</th>
          <th class="px-4 py-2 text-left font-semibold">Estimate (hrs)</th>
          <th class="px-4 py-2 text-left font-semibold">Time Spent (s)</th>
          <th class="px-4 py-2 text-left font-semibold">Date Started</th>
          <th class="px-4 py-2 text-left font-semibold">Date Completed</th>
          <th class="px-4 py-2 text-left font-semibold">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @labs.each do |lab| %>
          <tr class="border-t border-gray-700 hover:bg-gray-700">
            <td class="px-4 py-2"><%= lab.title %></td>
            <td class="px-4 py-2"><%= lab.description %></td>
            <td class="px-4 py-2"><%= lab.status %></td>
            <td class="px-4 py-2"><%= lab.estimate_in_hours %></td>
            <td class="px-4 py-2"><%= lab.time_spent_in_seconds %></td>
            <td class="px-4 py-2"><%= lab.date_started %></td>
            <td class="px-4 py-2"><%= lab.date_completed %></td>
            <td class="px-4 py-2 whitespace-nowrap">
              <%= link_to 'Edit', edit_lab_path(lab), class: 'text-blue-400 hover:underline mr-2' %>
              <%= link_to 'Delete', lab, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-400 hover:underline mr-2' %>
              <%= link_to lab_path(lab, anchor: 'notes'), class: 'text-green-400 hover:underline' do %>
                Notes <span class="text-gray-400">(<%= lab.notes.count %>)</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div> 