<div class="bg-gray-800 text-gray-100 rounded shadow p-8">
<%= form_with(model: lab, local: true) do |form| %>
  <% if lab.errors.any? %>
    <div class="mb-4 p-4 bg-red-900 border border-red-600 rounded">
      <h2 class="font-semibold text-red-300 mb-2"><%= pluralize(lab.errors.count, "error") %> prohibited this lab from being saved:</h2>
      <ul class="list-disc list-inside text-red-200">
        <% lab.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= form.label :title, class: 'block font-medium mb-1' %>
      <%= form.text_field :title, class: 'w-full border border-gray-600 bg-gray-900 text-gray-100 rounded px-3 py-2 focus:border-blue-500 focus:ring focus:ring-blue-900' %>
    </div>
    <div>
      <%= form.label :status, class: 'block font-medium mb-1' %>
      <%= form.select :status, options_for_select([['Idea', 'idea'], ['Planned', 'planned'], ['In Progress', 'in-progress'], ['Completed', 'completed']], lab.status || 'idea'), {}, { class: 'w-full border border-gray-600 bg-gray-900 text-gray-100 rounded px-3 py-2 focus:border-blue-500 focus:ring focus:ring-blue-900' } %>
    </div>
    <div class="md:col-span-2">
      <%= form.label :description, class: 'block font-medium mb-1' %>
      <%= form.text_area :description, class: 'w-full border border-gray-600 bg-gray-900 text-gray-100 rounded px-3 py-2 focus:border-blue-500 focus:ring focus:ring-blue-900', rows: 3 %>
    </div>
    <div>
      <%= form.label :estimate_in_hours, 'Estimate (hours)', class: 'block font-medium mb-1' %>
      <%= form.number_field :estimate_in_hours, class: 'w-full border border-gray-600 bg-gray-900 text-gray-100 rounded px-3 py-2 focus:border-blue-500 focus:ring focus:ring-blue-900' %>
    </div>
    <div>
      <%= form.label :time_spent_in_seconds, 'Time Spent (seconds)', class: 'block font-medium mb-1' %>
      <%= form.number_field :time_spent_in_seconds, class: 'w-full border border-gray-600 bg-gray-900 text-gray-100 rounded px-3 py-2 focus:border-blue-500 focus:ring focus:ring-blue-900' %>
    </div>
    <div>
      <%= form.label :date_started, class: 'block font-medium mb-1' %>
      <%= form.date_field :date_started, class: 'w-full border border-gray-600 bg-gray-900 text-gray-100 rounded px-3 py-2 focus:border-blue-500 focus:ring focus:ring-blue-900' %>
    </div>
    <div>
      <%= form.label :date_completed, class: 'block font-medium mb-1' %>
      <%= form.date_field :date_completed, class: 'w-full border border-gray-600 bg-gray-900 text-gray-100 rounded px-3 py-2 focus:border-blue-500 focus:ring focus:ring-blue-900' %>
    </div>
  </div>
  <div class="mt-6">
    <%= form.submit class: 'px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition' %>
  </div>
<% end %>
</div> 